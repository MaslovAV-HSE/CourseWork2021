<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductList.Pages.Account"
             Title="Аккаунт">
    <VerticalStackLayout HorizontalOptions="Center">
        <Button Text="Изменить логин"
                WidthRequest="150"
                Style="{StaticResource buttonApply}"
                Clicked="OnButtonLogin_Clicked"
                />

        <Button Text="Изменить email"
                WidthRequest="150"
                Style="{StaticResource buttonApply}"
                Clicked="OnButtonEmail_Clicked"
                />

        <Button Text="Изменить пароль"
                WidthRequest="150"
                Style="{StaticResource buttonApply}"
                Clicked="OnButtonPassword_Clicked"
                />
    </VerticalStackLayout>
</ContentPage>